<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="HardwareStoreAdmin.AppClass.MenuUsuario"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:iconos="clr-namespace:HardwareStoreAdmin.Iconos"
    BackgroundColor="{StaticResource BGGris}">

    <Grid>
        <VerticalStackLayout
            Padding="30"
            HorizontalOptions="Center"
            Spacing="30"
            VerticalOptions="Center"
            WidthRequest="350">
            <!--  Foto de perfil simulada con Border  -->
            <Border
                BackgroundColor="Gray"
                HeightRequest="120"
                HorizontalOptions="Center"
                StrokeShape="RoundRectangle 60"
                VerticalOptions="Center"
                WidthRequest="120">
                <Image>
                    <Image.Source>
                        <FontImageSource
                            FontFamily="Iconos"
                            Glyph="{x:Static iconos:Iconos.usuario}"
                            Size="64"
                            Color="White" />
                    </Image.Source>
                </Image>
            </Border>

            <!--  Nombre y correo  -->
            <Label
                FontAttributes="Bold"
                FontFamily="PoppinsBold"
                FontSize="24"
                HorizontalOptions="Center"
                Text="{Binding UsuarioNombre}" />
            <Label
                FontFamily="PoppinsBold"
                FontSize="20"
                HorizontalOptions="Center"
                Text="{Binding UsuarioEmail}"
                TextColor="Gray" />

            <!--  Opciones / Ajustes  -->
            <VerticalStackLayout Spacing="15" WidthRequest="250">
                <Button
                    BackgroundColor="{StaticResource Naranja}"
                    Clicked="CerrarSesion_Clicked"
                    FontFamily="PoppinsRegular"
                    FontSize="16"
                    Text="ðŸ”’ Cerrar sesiÃ³n"
                    TextColor="White" />
                <Button
                    Clicked="CambiarModoOscuro_Clicked"
                    FontFamily="PoppinsRegular"
                    FontSize="16"
                    Text="ðŸŒ™ Alternar modo oscuro" />
                <Button
                    Clicked="MostrarInfo_Clicked"
                    FontFamily="PoppinsRegular"
                    FontSize="16"
                    Text="â„¹ï¸ Acerca de" />
            </VerticalStackLayout>
        </VerticalStackLayout>
    </Grid>
</ContentPage>