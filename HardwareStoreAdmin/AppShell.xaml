<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="HardwareStoreAdmin.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:AppClass="clr-namespace:HardwareStoreAdmin.AppClass"
    xmlns:iconos="clr-namespace:HardwareStoreAdmin.Iconos"
    xmlns:local="clr-namespace:HardwareStoreAdmin"
    Title="HardwareStoreAdmin"
    BackgroundColor="{StaticResource BGGris}"
    Shell.FlyoutBehavior="Flyout">

    <ShellContent
        Title="Inicio"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage">
        <ShellContent.Icon>
            <FontImageSource
                FontFamily="Iconos"
                Glyph="{x:Static iconos:Iconos.home}"
                Color="White" />
        </ShellContent.Icon>
    </ShellContent>

    <ShellContent
        Title="Favoritos"
        ContentTemplate="{DataTemplate AppClass:ListaFavoritos}"
        Route="ListaFavoritos">
        <ShellContent.Icon>
            <FontImageSource
                FontFamily="Iconos"
                Glyph="{x:Static iconos:Iconos.corazon}"
                Color="White" />
        </ShellContent.Icon>
    </ShellContent>

    <ShellContent
        Title="Gestionar Productos"
        ContentTemplate="{DataTemplate AppClass:GestionProductos}"
        Route="GestionProductos">
        <ShellContent.Icon>
            <FontImageSource
                FontFamily="Iconos"
                Glyph="{x:Static iconos:Iconos.mail}"
                Color="White" />
        </ShellContent.Icon>
    </ShellContent>

    <ShellContent
        Title="Carrito de Compra"
        ContentTemplate="{DataTemplate AppClass:CarritoCompra}"
        Route="CarritoCompra">
        <ShellContent.Icon>
            <FontImageSource
                FontFamily="Iconos"
                Glyph="{x:Static iconos:Iconos.carrito}"
                Color="White" />
        </ShellContent.Icon>
    </ShellContent>

    <FlyoutItem Title="Inicio de sesión / creación de cuenta">
        <ShellContent ContentTemplate="{DataTemplate local:LoginPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Página principal">
        <ShellContent ContentTemplate="{DataTemplate local:MainPage}" />
    </FlyoutItem>
</Shell>
