<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="HardwareStoreAdmin.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:iconos="clr-namespace:HardwareStoreAdmin.Iconos"
    BackgroundColor="{StaticResource GrisOscuro}">

    <!--  Estructura principal con 2 filas: contenido y menú  -->
    <Grid RowDefinitions="*,Auto">

        <!--  CONTENIDO SCROLLABLE  -->
        <ScrollView Grid.Row="0">
            <VerticalStackLayout Padding="20,20,20,0" Spacing="20">

                <!--  Encabezado  -->
                <Label
                    FontAttributes="Bold"
                    FontSize="24"
                    Text="¡Bienvenido/a!"
                    TextColor="{x:StaticResource Naranja}" />

                <!--  Búsqueda  -->
                <Border
                    Padding="12"
                    BackgroundColor="White"
                    StrokeShape="RoundRectangle 12">
                    <Grid ColumnDefinitions="Auto,*" VerticalOptions="Center">
                        <Image HeightRequest="24" WidthRequest="24">
                            <Image.Source>
                                <FontImageSource
                                    FontFamily="Iconos"
                                    Glyph="{x:Static iconos:Iconos.lupa}"
                                    Color="Gray" />
                            </Image.Source>
                        </Image>
                        <Entry
                            Grid.Column="1"
                            Margin="10,0,0,0"
                            BackgroundColor="Transparent"
                            FontSize="16"
                            Placeholder="Buscar productos..."
                            PlaceholderColor="Gray"
                            TextColor="Black" />
                    </Grid>
                </Border>

                <!--  Oferta  -->
                <Border
                    Margin="0,10"
                    Padding="15"
                    BackgroundColor="#FFEBCD"
                    StrokeShape="RoundRectangle 20">
                    <Grid ColumnDefinitions="*,Auto" ColumnSpacing="10">
                        <VerticalStackLayout Grid.Column="0" Spacing="6">
                            <Label
                                FontAttributes="Bold"
                                FontSize="20"
                                Text="¡Descuento especial!"
                                TextColor="Black" />
                            <Label
                                FontSize="24"
                                Text="Hasta un 35%"
                                TextColor="{x:StaticResource Naranja}" />
                            <Label
                                FontSize="16"
                                Text="Del 1 al 20 de junio"
                                TextColor="Gray" />
                        </VerticalStackLayout>
                        <Image
                            Grid.Column="1"
                            Aspect="AspectFit"
                            HeightRequest="100"
                            Source="pc.png"
                            WidthRequest="100" />
                    </Grid>
                </Border>

                <!--  Filtros  -->
                <Label
                    FontAttributes="Bold"
                    FontSize="20"
                    Text="Filtros"
                    TextColor="White" />
                <HorizontalStackLayout HorizontalOptions="Center" Spacing="15">
                    <Button
                        BackgroundColor="{x:StaticResource Naranja}"
                        CornerRadius="20"
                        Text="Todos"
                        TextColor="White" />
                    <Button
                        BackgroundColor="#FFE0B2"
                        CornerRadius="20"
                        Text="Portátil"
                        TextColor="Black" />
                    <Button
                        BackgroundColor="#FFE0B2"
                        CornerRadius="20"
                        Text="Sobremesa"
                        TextColor="Black" />
                    <Button
                        BackgroundColor="#FFE0B2"
                        CornerRadius="20"
                        Text="Móvil"
                        TextColor="Black" />
                </HorizontalStackLayout>

                <!--  Título  -->
                <Label
                    FontAttributes="Bold"
                    FontSize="20"
                    Text="Más vendidos"
                    TextColor="White" />

                <!--  Lista de productos  -->
                <CollectionView x:Name="ProductosCollection" ItemsLayout="VerticalList">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Margin="0,5"
                                Padding="15"
                                BackgroundColor="#2A2A2A"
                                StrokeShape="RoundRectangle 12">
                                <VerticalStackLayout Spacing="10">
                                    <Label
                                        FontSize="16"
                                        Text="{Binding Nombre}"
                                        TextColor="White" />
                                    <Label
                                        FontSize="12"
                                        Text="{Binding Categoria}"
                                        TextColor="Gray" />
                                    <Label
                                        FontSize="14"
                                        Text="{Binding Precio}"
                                        TextColor="#FF7F00" />
                                </VerticalStackLayout>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

            </VerticalStackLayout>
        </ScrollView>

        <!--  MENÚ INFERIOR FIJO  -->
        <Border
            Grid.Row="1"
            BackgroundColor="White"
            HeightRequest="60"
            HorizontalOptions="Fill"
            Stroke="#DDDDDD"
            VerticalOptions="End">
            <Grid Padding="10" ColumnDefinitions="*,*,*,*">
                <!--  Inicio  -->
                <VerticalStackLayout
                    Grid.Column="0"
                    HorizontalOptions="Center"
                    Spacing="4">
                    <Image HeightRequest="32" WidthRequest="32">
                        <Image.Source>
                            <FontImageSource
                                FontFamily="Iconos"
                                Glyph="{x:Static iconos:Iconos.home}"
                                Color="{x:StaticResource Naranja}" />
                        </Image.Source>
                    </Image>
                </VerticalStackLayout>

                <!--  Carrito  -->
                <VerticalStackLayout
                    Grid.Column="1"
                    HorizontalOptions="Center"
                    Spacing="4">
                    <Image HeightRequest="32" WidthRequest="32">
                        <Image.Source>
                            <FontImageSource
                                FontFamily="Iconos"
                                Glyph="{x:Static iconos:Iconos.carrito}"
                                Color="Gray" />
                        </Image.Source>
                    </Image>
                </VerticalStackLayout>

                <!--  Favoritos  -->
                <VerticalStackLayout
                    Grid.Column="2"
                    HorizontalOptions="Center"
                    Spacing="4">
                    <Image HeightRequest="32" WidthRequest="32">
                        <Image.Source>
                            <FontImageSource
                                FontFamily="Iconos"
                                Glyph="{x:Static iconos:Iconos.corazon}"
                                Color="Gray" />
                        </Image.Source>
                    </Image>
                </VerticalStackLayout>

                <!--  Perfil  -->
                <VerticalStackLayout
                    Grid.Column="3"
                    HorizontalOptions="Center"
                    Spacing="4">
                    <Image HeightRequest="32" WidthRequest="32">
                        <Image.Source>
                            <FontImageSource
                                FontFamily="Iconos"
                                Glyph="{x:Static iconos:Iconos.usuario}"
                                Color="Gray" />
                        </Image.Source>
                    </Image>
                </VerticalStackLayout>
            </Grid>
        </Border>
    </Grid>
</ContentPage>
