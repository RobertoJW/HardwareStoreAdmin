<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="HardwareStoreAdmin.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:iconos="clr-namespace:HardwareStoreAdmin.Iconos"
    xmlns:selector="clr-namespace:HardwareStoreAdmin.Vistas"
    BackgroundColor="{StaticResource GrisOscuro}">

    <!--  PLANTILLAS Y SELECTOR  -->
    <ContentPage.Resources>
        <!--  PLANTILLA MÓVIL  -->
        <DataTemplate x:Key="MovilTemplate">
            <Border
                Margin="0,5"
                Padding="15"
                BackgroundColor="#2A2A2A"
                StrokeShape="RoundRectangle 12">
                <Grid ColumnDefinitions="Auto,*" ColumnSpacing="10">
                    <!--  Imagen  -->
                    <Grid
                        BackgroundColor="Black"
                        HeightRequest="100"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        WidthRequest="100">
                        <Image
                            Aspect="AspectFill"
                            HeightRequest="100"
                            Source="{Binding ImagenUrl}"
                            WidthRequest="100" />
                    </Grid>

                    <!--  Datos  -->
                    <VerticalStackLayout Grid.Column="1" Spacing="4">
                        <Label
                            FontSize="16"
                            Text="{Binding NombreProducto}"
                            TextColor="White" />
                        <Label
                            FontSize="12"
                            Text="Móvil"
                            TextColor="Gray" />
                        <Label
                            FontSize="14"
                            Text="{Binding Precio, StringFormat='Precio: {0:C}'}"
                            TextColor="#FF7F00" />
                    </VerticalStackLayout>
                </Grid>
            </Border>
        </DataTemplate>

        <!--  PLANTILLA PORTÁTIL  -->
        <DataTemplate x:Key="PortatilTemplate">
            <Border
                Margin="0,5"
                Padding="15"
                BackgroundColor="#2A2A2A"
                StrokeShape="RoundRectangle 12">
                <Grid ColumnDefinitions="Auto,*" ColumnSpacing="10">
                    <!--  Imagen  -->
                    <Grid
                        BackgroundColor="Black"
                        HeightRequest="100"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        WidthRequest="100">
                        <Image
                            Aspect="AspectFill"
                            HeightRequest="100"
                            Source="{Binding ImagenUrl}"
                            WidthRequest="100" />
                    </Grid>

                    <!--  Datos  -->
                    <VerticalStackLayout Grid.Column="1" Spacing="4">
                        <Label
                            FontSize="16"
                            Text="{Binding NombreProducto}"
                            TextColor="White" />
                        <Label
                            FontSize="12"
                            Text="Portátil"
                            TextColor="Gray" />
                        <Label
                            FontSize="14"
                            Text="{Binding Precio, StringFormat='Precio: {0:C}'}"
                            TextColor="#FF7F00" />
                    </VerticalStackLayout>
                </Grid>
            </Border>
        </DataTemplate>

        <!--  PLANTILLA SOBREMESA  -->
        <DataTemplate x:Key="SobremesaTemplate">
            <Border
                Margin="0,5"
                Padding="15"
                BackgroundColor="#2A2A2A"
                StrokeShape="RoundRectangle 12">
                <Grid ColumnDefinitions="Auto,*" ColumnSpacing="10">
                    <!--  Imagen  -->
                    <Grid
                        BackgroundColor="Black"
                        HeightRequest="100"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        WidthRequest="100">
                        <Image
                            Aspect="AspectFit"
                            HeightRequest="100"
                            Source="{Binding ImagenUrl}"
                            WidthRequest="100" />
                    </Grid>

                    <!--  Datos  -->
                    <VerticalStackLayout Grid.Column="1" Spacing="4">
                        <Label
                            FontSize="16"
                            Text="{Binding NombreProducto}"
                            TextColor="White" />
                        <Label
                            FontSize="12"
                            Text="Sobremesa"
                            TextColor="Gray" />
                        <Label
                            FontSize="14"
                            Text="{Binding Precio, StringFormat='Precio: {0:C}'}"
                            TextColor="#FF7F00" />
                    </VerticalStackLayout>
                </Grid>
            </Border>
        </DataTemplate>

        <!--  SELECTOR  -->
        <selector:ProductoTemplateSelector
            x:Key="ProductoTemplateSelector"
            MovilTemplate="{StaticResource MovilTemplate}"
            PortatilTemplate="{StaticResource PortatilTemplate}"
            SobremesaTemplate="{StaticResource SobremesaTemplate}" />
    </ContentPage.Resources>

    <!--  ESTRUCTURA PRINCIPAL  -->
    <Grid RowDefinitions="*,Auto">

        <!--  CONTENIDO  -->
        <ScrollView Grid.Row="0">
            <VerticalStackLayout Padding="20,20,20,0" Spacing="20">

                <Label
                    FontAttributes="Bold"
                    FontSize="24"
                    Text="¡Bienvenido/a!"
                    TextColor="{x:StaticResource Naranja}" />

                <!--  BÚSQUEDA  -->
                <Border
                    Padding="12"
                    BackgroundColor="White"
                    StrokeShape="RoundRectangle 12">
                    <Grid ColumnDefinitions="Auto,*" VerticalOptions="Center">
                        <Image HeightRequest="24" WidthRequest="24">
                            <Image.Source>
                                <FontImageSource
                                    FontFamily="Iconos"
                                    Glyph="{x:Static iconos:Iconos.lupa}"
                                    Color="Gray" />
                            </Image.Source>
                        </Image>
                        <Entry
                            Grid.Column="1"
                            Margin="10,0,0,0"
                            BackgroundColor="Transparent"
                            FontSize="16"
                            Placeholder="Buscar productos..."
                            PlaceholderColor="Gray"
                            TextColor="Black" />
                    </Grid>
                </Border>

                <!--  OFERTA  -->
                <Border
                    Margin="0,10"
                    Padding="15"
                    BackgroundColor="#FFEBCD"
                    StrokeShape="RoundRectangle 20">
                    <Grid ColumnDefinitions="*,Auto" ColumnSpacing="10">
                        <VerticalStackLayout Grid.Column="0" Spacing="6">
                            <Label
                                FontAttributes="Bold"
                                FontSize="20"
                                Text="¡Descuento especial!"
                                TextColor="Black" />
                            <Label
                                FontSize="24"
                                Text="Hasta un 35%"
                                TextColor="{x:StaticResource Naranja}" />
                            <Label
                                FontSize="16"
                                Text="Del 1 al 20 de junio"
                                TextColor="Gray" />
                        </VerticalStackLayout>
                        <Image
                            Grid.Column="1"
                            Aspect="AspectFit"
                            HeightRequest="100"
                            Source="pc.png"
                            WidthRequest="100" />
                    </Grid>
                </Border>

                <!--  FILTROS  -->
                <Label
                    FontAttributes="Bold"
                    FontSize="20"
                    Text="Filtros"
                    TextColor="White" />
                <HorizontalStackLayout HorizontalOptions="Center" Spacing="15">
                    <Button
                        BackgroundColor="{x:StaticResource Naranja}"
                        CornerRadius="20"
                        Text="Todos"
                        TextColor="White" />
                    <Button
                        BackgroundColor="#FFE0B2"
                        CornerRadius="20"
                        Text="Portátil"
                        TextColor="Black" />
                    <Button
                        BackgroundColor="#FFE0B2"
                        CornerRadius="20"
                        Text="Sobremesa"
                        TextColor="Black" />
                    <Button
                        BackgroundColor="#FFE0B2"
                        CornerRadius="20"
                        Text="Móvil"
                        TextColor="Black" />
                </HorizontalStackLayout>

                <!--  TÍTULO  -->
                <Label
                    FontAttributes="Bold"
                    FontSize="20"
                    Text="Más vendidos"
                    TextColor="White" />

                <!--  LISTA DE PRODUCTOS  -->
                <CollectionView
                    Margin="10,10,10,10"
                    ItemTemplate="{StaticResource ProductoTemplateSelector}"
                    ItemsSource="{Binding Productos}"
                    SelectionChanged="OnProductoSeleccionado"
                    SelectionMode="Single">
                    <CollectionView.ItemsLayout>
                        <GridItemsLayout
                            Orientation="Vertical"
                            Span="1"
                            VerticalItemSpacing="5" />
                    </CollectionView.ItemsLayout>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
